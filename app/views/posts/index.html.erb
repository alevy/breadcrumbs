<% if !@posts.blank? %>
  <% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post %></h2>
    <%= render :partial => "details", :locals => {:post => post } %>
    <div class="body"><%= raw Maruku.new(post.body).to_html %></div>
  </div>
  <% end %>
<% else %>
  <p class="empty_collcetion">
    No Posts
  </p>
<% end %>

<% admin do %><%= link_to "New Post", new_post_path %><% end %>